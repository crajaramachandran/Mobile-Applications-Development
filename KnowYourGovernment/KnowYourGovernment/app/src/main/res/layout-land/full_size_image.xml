<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/BackGroundMain"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints">

    <ScrollView
        android:layout_width="592dp"
        android:layout_height="275dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:background="@android:color/black"
        android:id="@+id/scroll_full"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/official_zip_full">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/constraint_full"
            android:background="@android:color/black"
            >

            <ImageView
                android:layout_width="185dp"
                android:layout_height="233dp"
                app:srcCompat="@drawable/missing_image"
                android:id="@+id/no_image_full"
                android:layout_marginEnd="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintLeft_toRightOf="@+id/official_name_full"
                android:layout_marginLeft="8dp" />

            <TextView
                android:text="Official_name"
                android:textColor="@android:color/white"
                android:layout_width="348dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:id="@+id/official_name_full"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/office_full"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp" />

            <TextView
                android:text="Office"
                android:textColor="@android:color/white"
                android:layout_width="334dp"
                android:layout_height="32dp"
                android:textSize="13sp"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/office_full"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp" />



        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <TextView
        android:text="ZipCode"
        android:layout_width="576dp"
        android:layout_height="21dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:id="@+id/official_zip_full"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp" />

</android.support.constraint.ConstraintLayout>